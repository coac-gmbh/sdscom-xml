<xs:schema targetNamespace="http://www.esdscom.eu/SDScom" xmlns="http://www.w3.org/2001/XMLSchema" xmlns:SDScom="http://www.esdscom.eu/SDScom" xmlns:xs="http://www.w3.org/2001/XMLSchema" version="2.0">
    <xs:include schemaLocation="SDSComXMLDT.xsd"/>
    <xs:include schemaLocation="SDSComXMLCT.xsd"/>
    <xs:simpleType name="Hazcom2012ClassCategoryEnumRestr">
        <xs:annotation>
            <xs:documentation>This type restricts GHS revision 3 to the classes and categories which are covered in HazCom 2012. Since environmental hazards are optional, they are not excluded here.</xs:documentation>
        </xs:annotation>
        <xs:restriction>
            <xs:simpleType>
                <xs:restriction base="SDScom:Ghs03ClassCategoryEnum">
                    <xs:enumeration value="Acute Tox. 5 (oral)"/>
                    <xs:enumeration value="Acute Tox. 5 (dermal)"/>
                    <xs:enumeration value="Acute Tox. 5 (inhalation)"/>
                    <xs:enumeration value="Skin Irrit. 3"/>
                    <xs:enumeration value="Asp. Tox. 2"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:restriction>
    </xs:simpleType>
    <xs:simpleType name="Hazcom2012ClassCategoryEnumExt">
        <xs:annotation>
            <xs:documentation>U.S. specific hazard classes</xs:documentation>
        </xs:annotation>
        <xs:restriction base="string">
            <xs:enumeration value="Pyrophoric Gas"/>
            <xs:enumeration value="Simple Asphyxiant"/>
            <xs:enumeration value="Combustible Dust"/>
        </xs:restriction>
    </xs:simpleType>
    <xs:simpleType name="Hazcom2012ClassCategoryEnum">
        <xs:union memberTypes="SDScom:Hazcom2012ClassCategoryEnumRestr SDScom:Hazcom2012ClassCategoryEnumExt"/>
    </xs:simpleType>
    <xs:simpleType name="UnIdNo">
        <xs:restriction base="string">
            <xs:pattern value="(UN|NA)\d\d\d\d"/>
        </xs:restriction>
    </xs:simpleType>
    <xs:complexType name="ClassificationUS">
        <xs:sequence>
            <xs:element minOccurs="0" name="Hazcom2012HazardClassification" maxOccurs="unbounded">
                <xs:annotation>
                    <xs:documentation>Classification according to 29 CFR 1910.1200</xs:documentation>
                </xs:annotation>
                <xs:complexType>
                    <xs:sequence>
                        <xs:element maxOccurs="1" minOccurs="1" name="HazardClassCategory" type="SDScom:Hazcom2012ClassCategoryEnum">
                            <xs:annotation>
                                <xs:documentation>The hazard class and a corresponding category / differentiation according to Hazcom 2012. </xs:documentation>
                            </xs:annotation>
                        </xs:element>
                        <xs:element maxOccurs="1" minOccurs="0" name="ClassificationProcedure" type="SDScom:Phrase">
                            <xs:annotation>
                                <xs:documentation>To state how the individual classification is prepared. (This information should be shown in section 16). Only relevant for instances of type Classification in section 2. For components in section 3, this info should not be part of the SDS.</xs:documentation>
                            </xs:annotation>
                        </xs:element>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
            <xs:element maxOccurs="unbounded" minOccurs="0" name="ClassificationComments" type="SDScom:Phrase"> </xs:element>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="ComponentUS">
        <xs:complexContent>
            <xs:extension base="SDScom:Component">
                <xs:sequence>
                    <xs:element minOccurs="0" name="UsClassification" type="SDScom:ClassificationUS"> </xs:element>
                    <xs:element maxOccurs="1" minOccurs="0" name="OnUsLabel" type="boolean">
                        <xs:annotation>
                            <xs:appinfo>SDScomChem</xs:appinfo>
                            <xs:documentation> Name of the component to be displayed on the hazard label: The value "True" for this means that the name of the actual component shall be printed on the hazard label as well as in section 2 of the SDS under the sub-heading 'Dangerous substances'�. The default value of this element will be 'false'�. </xs:documentation>
                        </xs:annotation>
                    </xs:element>
                    <xs:element minOccurs="0" name="UsTransportInformation">
                        <xs:complexType>
                            <xs:sequence>
                                <xs:element maxOccurs="1" minOccurs="0" name="IsDangerReleasingSubstanceDot" type="boolean"/>
                            </xs:sequence>
                        </xs:complexType>
                    </xs:element>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
    <xs:complexType name="TransportUS">
        <xs:sequence>
            <xs:element minOccurs="0" name="IdNoUsaDot" type="SDScom:UnIdNo">
                <xs:annotation>
                    <xs:documentation>U.S. transportation numbers are either preceded with "UN" or with "NA"</xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element minOccurs="0" name="ProperShippingName" type="SDScom:Phrase"> </xs:element>
            <xs:element maxOccurs="unbounded" minOccurs="0" name="DangerReleasingSubstance" type="SDScom:Phrase"> </xs:element>
            <xs:element minOccurs="1" name="Class" type="SDScom:TransportClassEnum">
                <xs:annotation>
                    <xs:documentation>The chemical’s most important transport hazard class. </xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element maxOccurs="2" minOccurs="0" name="Subrisk" type="SDScom:TransportClassEnum"/>
            <xs:element maxOccurs="3" minOccurs="0" name="HazardLabel" type="SDScom:TransportClassEnum"/>
            <xs:element minOccurs="0" name="PackingGroup" type="SDScom:PackingGroupEnum">
                <xs:annotation>
                    <xs:appinfo>SDScomBau</xs:appinfo>
                    <xs:appinfo>SDScomChem</xs:appinfo>
                </xs:annotation>
            </xs:element>
            <xs:element minOccurs="0" name="EnvironmentalHazard" type="SDScom:Phrase">
                <xs:annotation>
                    <xs:documentation>either "Environmentally hazardous" or empty</xs:documentation>
                </xs:annotation>
            </xs:element>
            <xs:element minOccurs="0" name="OtherInformation">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element maxOccurs="1" minOccurs="0" name="LimitedQtyPassengerRail" type="SDScom:string20"> </xs:element>
                        <xs:element maxOccurs="1" minOccurs="0" name="LimitedQtyCargo" type="SDScom:string20"> </xs:element>
                        <xs:element maxOccurs="unbounded" minOccurs="0" name="SpecialProvisions" type="SDScom:string4"/>
                        <xs:element maxOccurs="unbounded" minOccurs="0" name="OtherInfo" type="SDScom:Phrase"/>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="NationalExtensionUS">
        <xs:annotation>
            <xs:documentation>National legislation - United States of America</xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element minOccurs="0" name="Federal"/>
            <xs:element minOccurs="0" name="State">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element minOccurs="0" name="California">
                            <xs:complexType>
                                <xs:sequence>
                                    <xs:element minOccurs="0" name="Proposition65">
                                        <xs:complexType>
                                            <xs:choice>
                                                <xs:element name="Candidate" type="xs:boolean">
                                                    <xs:annotation>
                                                        <xs:documentation>Allows to indicate substances under discussion for inclusion</xs:documentation>
                                                    </xs:annotation>
                                                </xs:element>
                                                <xs:sequence>
                                                    <xs:element name="Listed" type="xs:boolean"/>
                                                    <xs:element minOccurs="0" name="ToxType" type="xs:string"/>
                                                    <xs:element minOccurs="0" name="Listing" type="xs:string"/>
                                                </xs:sequence>
                                            </xs:choice>
                                        </xs:complexType>
                                    </xs:element>
                                </xs:sequence>
                            </xs:complexType>
                        </xs:element>
                        <xs:element minOccurs="0" name="RhodeIsland">
                            <xs:complexType>
                                <xs:sequence>
                                    <xs:element minOccurs="0" name="HazardousSubstancesList">
                                        <xs:annotation>
                                            <xs:documentation>see http://www.dlt.ri.gov/occusafe/pdfs/HazardousCAS.pdf</xs:documentation>
                                        </xs:annotation>
                                        <xs:complexType>
                                            <xs:sequence>
                                                <xs:element name="Listed" type="xs:boolean"/>
                                                <xs:element minOccurs="0" name="SourceAcgih" type="xs:boolean">
                                                    <xs:annotation>
                                                        <xs:documentation>In the list, denoted by the letter T.</xs:documentation>
                                                    </xs:annotation>
                                                </xs:element>
                                                <xs:element minOccurs="0" name="SourceNfpa49" type="xs:boolean">
                                                    <xs:annotation>
                                                        <xs:documentation>In the list, denoted by the letter F.</xs:documentation>
                                                    </xs:annotation>
                                                </xs:element>
                                                <xs:element minOccurs="0" name="SourceIarc" type="xs:boolean">
                                                    <xs:annotation>
                                                        <xs:documentation>In the list, denoted by the letter C.</xs:documentation>
                                                    </xs:annotation>
                                                </xs:element>
                                            </xs:sequence>
                                        </xs:complexType>
                                    </xs:element>
                                </xs:sequence>
                            </xs:complexType>
                        </xs:element>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
</xs:schema>
